//		
//	}
//	
//	public void createdata(Integer id,String name, Integer age) {
//		sMap.put(id, new StudentEntity(name,age));
//		
//	}
	
	public boolean checkidexist(Integer id) {
		boolean valid = true;
		 if (sMap.containsKey(id) == valid)return valid;
		 else return false;
	
	}
	

}
