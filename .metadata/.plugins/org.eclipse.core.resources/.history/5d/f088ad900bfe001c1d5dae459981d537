package Student;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

public class DataUtil {
	
	HashMap<Integer, StudentEntity> sMap = (HashMap<Integer, StudentEntity>) datas();
	
	public static Map<Integer, StudentEntity> datas(){
	 Map<Integer, StudentEntity> sMap = new HashMap<>();
	 
	 List<SubjectType> list = new ArrayList<SubjectType>();
	 
	 SubjectType subjectType = null;
	 list.add(subjectType.P);
	 
	 List< SubjectType > favoritePets = List.of( subjectType.CO, subjectType.P) ;

		 
		sMap.put(1, new StudentEntity("Conred",27,new Course(CourseType.BSIT,list)));
		sMap.put(2, new StudentEntity("Batman",28,new Course(CourseType.BSCE,list)));
		sMap.put(3, new StudentEntity("Superman",14,new Course(CourseType.BSA,list)));
		sMap.put(4, new StudentEntity("Joker",16,new Course(CourseType.BSTM,list)));
		sMap.put(5, new StudentEntity("Alas-as",39,new Course(CourseType.BSIT,favoritePets)));
	
		
		return sMap;
		
	}
	
	public void getInfoById(Integer id) {
		System.out.println(sMap.get(id));
		
	}
	
	public void ListInfo() {
		for(Map.Entry datamap: sMap.entrySet()) {
			System.out.println(datamap.getKey()+" : "+ datamap.getValue());
		}
	}
	
	public void deleteById(Integer id) {
		sMap.remove(id);
		 
	}
	
//	public void updateById(Integer id,String name, Integer age) {
