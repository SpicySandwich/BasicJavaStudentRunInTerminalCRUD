	public void findbyid(String string) {

		System.out.print("Find by id: ");
		
		string = scanner.nextLine();
		Integer integer2 = Integer.parseInt(convert.convert(string));
		
		dataUtil.getInfoById(integer2);
	}
	
	public void List() {
		dataUtil.ListInfo();	
	}
	
	
	public void deletebyid(String string) {
		System.out.print("Delete by id: ");
		string = scanner.nextLine();
		Integer integer2 = Integer.parseInt(convert.convert(string));
		dataUtil.deleteById(integer2);
		System.out.println("Succefulley Delete id : "+ integer2);
	}
	
	public void updatebyid(String string) {
		
		System.out.print("update by id: ");
		string = scanner.nextLine();
		System.out.print("Name: ");
		name = scanner.nextLine();
		System.out.print("Age: ");
		age = scanner.nextLine();
		
		Integer integer2 = Integer.parseInt(convert.convert(string));
		Integer integer3 = Integer.parseInt(convert.convert(age));
		dataUtil.updateById(integer2,name,integer3);
		System.out.println("Succefully update id:"+integer2);
	}
	
	public void createdata(String string) {
		
		System.out.print("create id: ");
		string = scanner.nextLine();
		System.out.print("Name: ");
		name = scanner.nextLine();
		System.out.print("Age: ");
		age = scanner.nextLine();
		Integer integer2 = Integer.parseInt(convert.convert(string));
		Integer integer3 = Integer.parseInt(convert.convert(age));
		
		dataUtil.createdata(integer2, studentValidation.checkname(name),studentValidation.checkage(integer3));
		System.out.println("Succefully created data with id:"+integer2);
	}
	
	
	
}
