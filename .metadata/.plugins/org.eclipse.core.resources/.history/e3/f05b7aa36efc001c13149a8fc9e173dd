package StudentValidation;

public class StudentLogic {
	
	StudentEntity studentEntity = new StudentEntity();
	StudentValidation studentValidation = new StudentValidation();
	
	
	public String inputName(String name) {
		studentEntity.setName(name);
		return studentValidation.checkname(studentEntity.getName());
	}
	
	public Integer inputAge(Integer age) {
		studentEntity.setAge(age);
		return studentValidation.checkage(studentEntity.getAge());
	}
	
	public Integer findid(Integer id) {
		studentEntity.setAge(id);
		return studentValidation.checkid(studentEntity.getId());
	}
	
	

}
